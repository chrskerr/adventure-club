---
import { Image } from 'astro:assets'

type Props = {
  src: ImageMetadata
  alt: string
  caption?: string
}

const { src, alt, caption } = Astro.props
---

<figure
  class="not-prose rounded-base border-border bg-main font-base shadow-shadow w-full overflow-hidden border-2"
>
  <Image
    class="aspect-4/3 w-full object-cover"
    src={src}
    alt={alt}
    format="webp"
    width={900}
    densities={[1, 2, 3]}
  />
  {
    !!caption && (
      <figcaption class="border-border border-t-2 p-4 text-black">
        {caption}
      </figcaption>
    )
  }
</figure>
