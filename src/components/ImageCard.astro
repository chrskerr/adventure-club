---
import { Image } from 'astro:assets'

type Props = {
  src: ImageMetadata
  alt: string
  caption?: string
}

const { src, alt, caption } = Astro.props
---

<figure
  class="not-prose rounded-base border-border bg-main font-base shadow-shadow w-full overflow-hidden border-2"
>
  <Image
    src={src}
    alt={alt}
    format="webp"
    widths={[12, 11, 10, 9, 8].map((exp) => 2 ** exp)}
    sizes="(max-width: 900px) 100vw, 900px"
  />
  {
    !!caption && (
      <figcaption class="border-border border-t-2 p-4 text-black">
        {caption}
      </figcaption>
    )
  }
</figure>
