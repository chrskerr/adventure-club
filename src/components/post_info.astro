---
import Calendar from './icons/calendar.svg'

const { title, date, tags } = Astro.props
---

<div class="mb-5">
  <h2 class="my-0 w-max text-4xl" transition:name={title}>
    {title}
  </h2>
  <div class="w500:flex-col w500:items-start flex items-center justify-between">
    <div class="flex items-center">
      <Calendar />
      <p class="text-sm leading-5 tracking-wide">
        {date}
      </p>
    </div>
    <div class="flex items-center">
      {
        tags.map((tag: string) => (
          <a
            class="not-prose rounded-base border-border dark:border-dark-border dark:text-text bg-main ml-3 border px-2 py-0.5 text-sm no-underline first:ml-0"
            href={`/tags/${tag}`}
          >
            #{tag}
          </a>
        ))
      }
    </div>
  </div>
</div>
